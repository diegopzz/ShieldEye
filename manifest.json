{
  "manifest_version": 3,
  "name": "Scrapfly - Security Detection",
  "version": "1.0.0",
  "description": "Detect CAPTCHAs, anti-bot systems, and fingerprinting technologies on websites",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation",
    "webRequest",
    "cookies",
    "notifications"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["Modules/ConfidenceManager.js", "Modules/DetectionEngineManager.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Scrapfly - Security Detection",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "Modules/NotificationManager.css",
        "detectors/*/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}