{
  "manifest_version": 2,
  "name": "ShieldEye",
  "version": "0.1.0",
  "description": "Advanced anti-bot and captcha detection system for web security analysis",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "webRequest",
    "webNavigation",
    "tabs",
    "alarms",
    "notifications",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["browser-compat.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-compat.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ShieldEye V0.1",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "icons/providers/*",
    "detectors/*",
    "detectors/*/*",
    "scripts/pbf.js",
    "scripts/message.browser.js",
    "modules/*.js",
    "modules/capture/*.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "shieldeye@example.com",
      "strict_min_version": "109.0"
    }
  }
}
